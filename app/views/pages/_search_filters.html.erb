<div class="search-filters">
  <div class="btn-group">
    <%= link_to join_game_path(time: :time) do %>
        <input class="btn-sec" type="button" value="today">
    <% end %>
  </div>

  <div class="btn-group">
    <div class="dropdown">
      <button class="btn-sec dropdown-toggle" type="button" data-toggle="dropdown">skill-level
      <span class="caret"></span></button>
      <ul class="dropdown-menu">
        <li><%= link_to "ITN 1-3", games_path(skill_range: :'1-3') %></li>
        <li><%= link_to "ITN 3-6", games_path(skill_range: :'3-6') %></li>
        <li><%= link_to "ITN 6-9", games_path(skill_range: :'6-9') %></li>
      </ul>
    </div>
  </div>

  <div class="btn-group">
    <div class="dropdown">
    <button class="btn-sec dropdown-toggle" type="button" data-toggle="dropdown">game-type<span class="caret"></span>
    </button>
      <ul class="dropdown-menu">
        <li><%= link_to "Singles", join_game_path(game_type: :singles) %></li>
        <li><%= link_to "Doubles", join_game_path(game_type: :doubles) %></li>
      </ul>
    </div>
  </div>
</div>
