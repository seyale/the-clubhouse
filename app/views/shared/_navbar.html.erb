<!--  NAV CLUBHAUS -->


<div class = "nav-clubhaus">
  <% if user_signed_in? %>

  <!-- Links when logged in -->
  <div class="clubhaus-nav-left hidden-xs hidden-sm">
    <%= link_to "JOIN GAME", join_game_path, class: "nav-clubhaus-item nav-clubhaus-link" %>
    <%= link_to "WATCH GAME", games_path, class: "nav-clubhaus-item nav-clubhaus-link" %>
    <%= link_to "EVENTS", events_path, class: "nav-clubhaus-item nav-clubhaus-link" %>
  </div>

  <!-- Logo centered -->
  <div class="clubhaus-logo">
    <%= link_to root_path do %>
    <%= image_tag "logo_white_transp.png", height: 50 %>
    <% end %>
  </div>

  <div class="clubhaus-nav-right">
    <div class="dropdown">
      <%= image_tag "#{current_user.photo}", class: "avatar dropdown-toggle", id: "nav-clubhaus-menu", "data-toggle" => "dropdown" %>
      <ul class="dropdown-menu dropdown-menu-right nav-clubhaus-dropdown-menu">
        <li>
          <%= link_to user_path(current_user) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <% else %>

    <!-- Logo -->
  <div class="clubhaus-logo">
    <%= link_to root_path do %>
    <%= image_tag "logo_white_transp.png", height: 50 %>
    <% end %>
  </div>

  <!-- Login link (when logged out) -->
  <div class="clubhaus-nav-left">
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "nav-clubhaus-item nav-clubhaus-link" %>
  </div>
  <% end %>

    <!-- Dropdown list appearing on mobile only -->
  <div class="nav-clubhaus-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-left nav-clubhaus-dropdown-menu">
        <li><%= link_to "JOIN GAME", join_game_path, class: "nav-clubhaus-item nav-clubhaus-link" %></li>
        <li><%= link_to "WATCH GAME", games_path, class: "nav-clubhaus-item nav-clubhaus-link" %></li>
        <li><%= link_to "EVENTS", events_path, class: "nav-clubhaus-item nav-clubhaus-link" %></li>
      </ul>
    </div>
  </div>
</div>

