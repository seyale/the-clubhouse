<div class="container">
  <div class="row">
    <!-- Profile Details -->
    <div class="col-xs-12 col-sm-6 col-md-5 col-md-offset-1">
      <div class="profile-details">
        <div class="profile-pic">
          <%= image_tag "#{@user.photo}", class: "avatar-profile" %>
        </div>
        <div class="profile-info">
          <h2><%= @user.first_name %> <%= @user.last_name %></h2>
          <p><%= @user.email %></p>
          <p><%= @user.description %></p>
        </div>
        <div class="profile-links">
          <%= link_to "Edit", edit_user_path, class: "btn-sec-s" %>
          <%= link_to "Delete", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete #{@user.first_name} #{@user.last_name}?" }, class: "btn btn-flat" %>
        </div>
      </div>
    </div>
    <!-- Personal Details and Statistics -->
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="row">
          <div class="col-xs-3 col-xs-offset-2">
            <div class="statistics">
              <%= image_tag "skill-level.png" %>
              <div class="statistics-text">
                <h2><%= @user.skill_level %></h2>
                <h5>skill level</h5>
              </div>
            </div>
          </div>
          <div class="col-xs-3 col-xs-offset-2">
            <div class="statistics">
              <%= image_tag "gamesplayed.png" %>
              <div class="statistics-text">
                <h2><%= @number_of_games %></h2>
                <h5>games</h5>
              </div>
            </div>
          </div>
      </div>

    </div>
  </div>
  <!-- Games User -->

</div>

